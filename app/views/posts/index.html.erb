<h1>Posts</h1>

<table>
  <thead>
    <tr class=post_bg>
      <th>Title</th>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>By: <%= post.user.first_name %> <%= post.user.last_name %></td>
        <td class=center_text><%= link_to 'Show', post %></td>
        <% if @current_user == post.user %>
          <td class=center_text><%= link_to 'Edit', edit_post_path(post) %></td>
          <td class=center_text><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
